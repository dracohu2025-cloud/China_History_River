{
  "expo": {
    "name": "听见历史",
    "slug": "hear-history",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "hearhistory",
    "splash": {
      "backgroundColor": "#DC143C",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hearhistory.app",
      "infoPlist": {
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "package": "com.hearhistory.app",
      "adaptiveIcon": {
        "backgroundColor": "#DC143C"
      }
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
